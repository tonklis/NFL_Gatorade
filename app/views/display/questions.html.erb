<%= javascript_include_tag 'display_questions' %>
<body class="bg_blue">
    <div id="wrapper">
        <header>
            <div class="logo animated-logo zoomIn "></div>
        </header>

        <div id="main" class="width100">

            <div class="q-men <%= @styles[0] %>"></div>

            <div class="question animated fadeIn" id="questions" data-questions="<%= @questions.to_json(:include => :answers) %>">
                <div class="lines <%= @styles[1] %>"></div>
                <div class="q-number" id="question_number"></div>
                <div class="q-numberall">/ 10</div>
                <div class="q-text " id="question_text">
                    
                </div>
                <div class="q-ref animated fadeIn" id="question_source" style="display: none;"></div>

            </div>
            <div class="clear"></div>
            <div class="q-selection <%= @styles[2] %> animated fadeIn">

                <div>
                    <input id="radio1" type="radio" name="radio" value="1" checked="checked">
                    <label for="radio1" id="question_answer_0"></label>
                </div>
                <div>
                    <input id="radio2" type="radio" name="radio" value="2">
                    <label for="radio2" id="question_answer_1"></label>
                </div>
                <div>
                    <input id="radio3" type="radio" name="radio" value="3">
                    <label for="radio3" id="question_answer_2"></label>
                </div>
                <div>
                    <input id="radio4" type="radio" name="radio" value="4">
                    <label for="radio4" id="question_answer_3"></label>
                </div>

            </div>
            <div class="clear"></div>

            <div class="siguente-btn <%= @styles[3] %> animated fadeIn">
                <input type="submit" value="" id="siguiente_btn"></div>

        </div>
        <!-- close div#main -->
        <div class="clear-footer"></div>

        <footer>
            <a href="#">TÃ©rminos y Condiciones</a>
        </footer>
    </div>
    <!-- close div#wrapper -->
</body>
